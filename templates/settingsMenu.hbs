<form class="athena-settings-form">
  <div class="athena-settings-explanation">
    <p>
      Hey here's a quick guide that I hope I won't forget to actually write later.
    </p>
  </div>
  <!-- Dropdown Menu -->
  <div class="athena-dropdown-add-menu-spacer">
    <div class="athena-dropdown-add-menu" style="display:none;">
      <div class="athena-dropdown-left add-option" data-type="manual">
        <p>Manual</p>
      </div>
      <div class="add-option" data-type="dictionary">
        <p>Dictionary</p>
      </div>
      <div class="athena-dropdown-right add-option" data-type="array">
        <p>Array</p>
      </div>
    </div>
  </div>

  <div class="athena-table">
    <div class="athena-table-header">
      <div class="add-button-group" style="padding-left: 0.5em;">

        <button type="button" class="athena-button centerChildren athena-add-entry">
          <i class="fas fa-plus"></i>
          <i class="fas fa-caret-down"></i>
        </button>
      </div>
      <div style="width: 120px; padding-left: 0.5em;">
        <p>Type</p>
      </div>
      <div style="width: 240px;">
        <p>Path</p>
      </div>
      <div style="width: 150px;">
        <p>Label</p>
      </div>
      <div style="width: 50px;">
        <p>Default</p>
      </div>
    </div>
    {{> "modules/athenas-movement-trail/templates/partials/manualEntry.hbs" path=manualPath label=label }}
    {{> "modules/athenas-movement-trail/templates/partials/dictEntry.hbs" path=manualPath label=label }}
    {{> "modules/athenas-movement-trail/templates/partials/arrayEntry.hbs" path=manualPath label=label }} 
  </div>  

  <button type="submit" class="athena-submit-button">Save Changes</button>
</form>
